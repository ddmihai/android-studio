<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".info">

    <View
        android:id="@+id/view46"
        android:layout_width="310dp"
        android:layout_height="4dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/gradient_background_orange"
        app:layout_constraintStart_toEndOf="@+id/view43"
        app:layout_constraintTop_toBottomOf="@+id/view45" />

    <View
        android:id="@+id/view45"
        android:layout_width="310dp"
        android:layout_height="70dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/roundgradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintStart_toEndOf="@+id/view43"
        app:layout_constraintTop_toBottomOf="@+id/view44" />

    <View
        android:id="@+id/view42"
        android:layout_width="4dp"
        android:layout_height="500dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
